<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_pos_simple_form" model="ir.ui.view">
        <field name="name">res.partner.pos.simple.form</field>
        <field name="model">res.partner</field>
        <field name="priority">999</field>
        <field name="arch" type="xml">
            <form string="Create Contact">
                <sheet>
                    <field name="image_1920" widget="image"
                           class="o_field_image o_field_many2one_avatar"
                           options="{'preview_image': 'image_128', 'size': [90, 90]}"/>
                    <div class="oe_title">
                        <field name="name"
                               placeholder="e.g. Brandon Freeman"
                               required="True"/>
                    </div>
                    <group>
                        <group>
                            <field name="phone" widget="phone"/>
                            <field name="mobile" widget="phone"/>
                            <field name="email"/>
                            <field name="street" placeholder="Street..."/>
                            <field name="street2"/>
                            <field name="city"/>
                            <field name="state_id"
                                   options="{'no_open': True}"
                                   placeholder="State"/>
                            <field name="zip"/>
                            <field name="country_id"
                                   options="{'no_open': True}"
                                   placeholder="Country"/>
                        </group>
                        <group>
                            <field name="vat" string="Tax ID"/>
                            <field name="customer_rank" invisible="1"/>
                        </group>
                    </group>
                    <field name="comment" placeholder="Internal notes..." nolabel="1"/>
                </sheet>
            </form>
        </field>
    </record>
</odoo>