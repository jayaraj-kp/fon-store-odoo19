<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_required_fields" model="ir.ui.view">
        <field name="name">product.template.form.required.fields</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">

            <!-- Make Internal Reference (default_code) field required via xpath -->
            <xpath expr="//field[@name='default_code']" position="attributes">
                <attribute name="required">True</attribute>
            </xpath>

            <!-- Make Barcode field required via xpath -->
            <xpath expr="//field[@name='barcode']" position="attributes">
                <attribute name="required">True</attribute>
            </xpath>

        </field>
    </record>
</odoo>
