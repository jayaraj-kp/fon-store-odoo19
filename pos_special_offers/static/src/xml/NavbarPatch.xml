<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
<!--
    Patch the POS Navbar to inject SpecialOfferButton.
    SpecialOfferButton is registered as a component on Navbar via
    the pos_component registry (see special_offer_button.js).
    The xpath targets the right-side header area of the Navbar.
-->
<t t-name="pos_special_offers.NavbarPatch"
   t-inherit="point_of_sale.Navbar"
   t-inherit-mode="extension">
    <xpath expr="//div[hasclass('pos-rightheader')]" position="inside">
        <SpecialOfferButton/>
    </xpath>
</t>
</templates>
