<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Category (reuse Sales category) -->
        <record id="module_category_sale_margin_block" model="ir.module.category">
            <field name="name">Sale Margin Block</field>
            <field name="description">Manage minimum margin / cost threshold overrides</field>
            <field name="sequence">100</field>
        </record>

        <!--
            Users in this group can bypass the margin/cost block.
            Assign to Sales Managers or Finance team as required.
        -->
        <record id="group_sale_margin_manager" model="res.groups">
            <field name="name">Can Override Margin/Cost Block</field>
            <field name="category_id" ref="module_category_sale_margin_block"/>
            <field name="comment">
                Members of this group will only receive a warning (chatter note)
                instead of a hard block when margin or cost thresholds are breached.
            </field>
        </record>

    </data>
</odoo>
