<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sensible defaults; noupdate=1 so they are not overwritten on upgrade -->
        <record id="smb_param_margin_enabled" model="ir.config_parameter">
            <field name="key">sale_margin_block.margin_block_enabled</field>
            <field name="value">False</field>
        </record>
        <record id="smb_param_margin_minimum" model="ir.config_parameter">
            <field name="key">sale_margin_block.margin_minimum</field>
            <field name="value">0</field>
        </record>
        <record id="smb_param_cost_enabled" model="ir.config_parameter">
            <field name="key">sale_margin_block.cost_block_enabled</field>
            <field name="value">False</field>
        </record>
        <record id="smb_param_cost_minimum" model="ir.config_parameter">
            <field name="key">sale_margin_block.cost_minimum</field>
            <field name="value">100</field>
        </record>
        <record id="smb_param_warn_only" model="ir.config_parameter">
            <field name="key">sale_margin_block.warn_only</field>
            <field name="value">False</field>
        </record>
    </data>
</odoo>
